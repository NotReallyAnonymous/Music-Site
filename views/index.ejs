<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Music Projects</title>
    <link rel="stylesheet" href="/static/styles.css" />
  </head>
  <body>
    <header class="hero">
      <h1>Music Projects</h1>
      <p>Drop project folders into the <code>music</code> directory to populate this list.</p>
    </header>
    <main class="container">
      <% if (projects.length === 0) { %>
        <div class="empty-state">
          <p>No projects yet. Create a folder inside <code>music</code> to get started.</p>
        </div>
      <% } else { %>
        <ul class="project-grid">
          <% projects.forEach((project) => { %>
            <li>
              <a class="project-card" href="/project/<%= encodeURIComponent(project) %>">
                <h2><%= project %></h2>
                <span>Open project â†’</span>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </main>
    <script>
      const events = new EventSource("/events");
      events.addEventListener("message", (event) => {
        if (event.data === "reload") {
          window.location.reload();
        }
      });
    </script>
  </body>
</html>
